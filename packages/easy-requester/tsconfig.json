{
  "extends": "@wallettuner/ts-config/base.tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules"]
}
