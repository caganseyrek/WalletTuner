{
  "trailingComma": "all",
  "printWidth": 100,
  "tabWidth": 2,
  "singleQuote": false,
  "bracketSpacing": true,
  "bracketSameLine": true,
  "semi": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^(?:[./@]*src)(/.*|$)",
    "^(?:[./@]*controllers)(/.*|$)",
    "^(?:[./@]*models)(/.*|$)",
    "^(?:[./@]*routes)(/.*|$)",
    "^(?:[./@]*middleware)(/.*|$)",
    "^(?:[./@]*localization)(/.*|$)"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderGroupNamespaceSpecifiers": true,
  "importOrderCaseInsensitive": true
}