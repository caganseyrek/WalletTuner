    "tests/**/*.{ts,js}": [
      "prettier --write",
      "eslint . --report-unused-disable-directives --max-warnings 0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caganseyrek/WalletTuner.git"
  },
  "keywords": [
    "api",
    "backend",
    "express",
    "typescript"
